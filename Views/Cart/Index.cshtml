@model Cart

<h2>Your Cart</h2>

<table>
    <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Quantity</td>
            <td>@item.Price.ToString("C")</td>
            <td>@item.Total.ToString("C")</td>
            <td>
                <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId">Remove</a>
            </td>
        </tr>
    }
</table>

<h3>Grand Total: @Model.GrandTotal.ToString("C")</h3>

<a asp-action="ClearCart">Clear Cart</a>
<a asp-action="Checkout">Checkout</a>
