<section id="about-wrapper">
    <div id="about">
        <h3>About Us</h3>
        <p>At our store, we offer high-quality fashion at affordable prices. Explore our latest collections and find the perfect outfit!</p>
    </div>
</section>

<style>
    #about-wrapper {
        margin-top: 50px; /* Adds space above the about section */
        padding: 20px; /* Optional padding inside the wrapper */
    }

    #about {
        text-align: center;
        background-color: #f4f4f4; /* Optional background color for styling */
        padding: 20px; /* Add padding inside the about section for better spacing */
        border-radius: 8px; /* Optional: rounded corners */
    }

    /* Products Grid Styling */
    .products-grid {
        display: grid; /* Use CSS Grid */
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); /* Create responsive columns */
        gap: 20px; /* Spacing between items */
    }

    .product {
        text-align: center; /* Center content inside each product */
    }

    .product img {
        width: 100%; /* Set the image to scale with the container */
        height: auto; /* Maintain aspect ratio */
        max-width: 250px; /* Limit the image width to 250px */
        margin-bottom: 10px; /* Add spacing below the image */
    }

    .btn {
        display: inline-block;
        padding: 8px 12px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 4px;
    }

    .btn:hover {
        background-color: #0056b3;
    }
</style>
